# ============================================
# DATABASE CONFIGURATION
# ============================================
# Set to 'true' to use Supabase, 'false' for MySQL
USE_SUPABASE=true

# Supabase Configuration (get from https://app.supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# MySQL Configuration (optional - only if USE_SUPABASE=false)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vending_machine
DB_USER=root
DB_PASSWORD=your_password

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
MACHINE_ID=VM01

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=24h

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# MQTT Configuration (choose one)

# Option 1: Local Mosquitto (untuk development)
# MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# Option 2: HiveMQ Cloud (untuk production/deployment) - RECOMMENDED
MQTT_BROKER_URL=mqtts://your-cluster.s1.eu.hivemq.cloud:8883
MQTT_USERNAME=your-hivemq-username
MQTT_PASSWORD=your-hivemq-password

# Payment Gateway Configuration (contoh untuk Midtrans)
PAYMENT_SERVER_KEY=your_payment_server_key
PAYMENT_CLIENT_KEY=your_payment_client_key
PAYMENT_IS_PRODUCTION=false

# Machine Configuration
MACHINE_ID=VM01
MACHINE_TOKEN=your_machine_token_here

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
